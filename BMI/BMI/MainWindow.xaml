<Window x:Class="BMI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BMI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
	<StackPanel>
		<StackPanel Orientation="Horizontal">
			<TextBlock Height="18">身高:</TextBlock>
			<TextBox Width="400" Height="32" Margin="10,15,10,15"></TextBox>
			<Button Click="Button_Click"  Content="清除" Height="35" Width="58"/>
		</StackPanel>
		<StackPanel Orientation="Horizontal">
			<TextBlock Height="17">體重:</TextBlock>
			<TextBox Width="400" Height="32" Margin="10,15,10,15"></TextBox>
			<Button Click="Button_Click"  Content="清除" Height="35" Width="58"/>
		</StackPanel>
		<Button Click="Button_Click" Height="48" Margin="20,20,20,10">計算</Button>
		<TextBlock
                Margin="230,40,230,40"  FontSize="50" Foreground="Red" Text="0" Height="60"/>
	</StackPanel>
</Window>
